extends "base.jade"

- load i18n
- load url from future

{% block title %}{% trans "Password reset" %}{% endblock %}

block content

  h1 {% trans "Password reset" %}

  p {% trans "Forgotten your password? Enter your e-mail address below, and we'll e-mail instructions for setting a new one." %}

  form.form-horizontal(action="", method="post")
    {% csrf_token %}
    {{ form.email.errors }}
    .form-group
      label.control-label(for="id_email") {% trans 'E-mail address:' %}
      input#id_email.form-control(maxlength="254", name="email", type="email",
        value="{%if form.email.value %}{{form.email.value}}{% endif %}")
    .form-group.submit-group
      input.btn.btn-primary(type="submit", value="{% trans 'Reset my password' %}")
